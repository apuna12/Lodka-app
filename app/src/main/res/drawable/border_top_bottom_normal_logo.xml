<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#FFF" />  <!-- bottom border line -->
            <solid android:color="#FFF" />  <!-- background-->
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#FFF" /> <!-- right/left border line-->
        </shape>
    </item>

</layer-list>